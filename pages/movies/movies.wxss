@import "./movie-list/movie-list-template.wxss";


page {
  background-color: #eee;
  position: relative;
}

.movie_search {
  position: relative;
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: column;

}
.search_img {
  height: 80rpx;
  line-height: 114rpx;
  margin-left: 40rpx;
}
input {
  position: absolute;
  height: 80rpx;
  top: 0;
  left: 0;
  padding-left:100rpx;
  line-height: 80rpx;
  font-size: 36rpx
  
 
}
.placeholder {
  font-size: 24rpx;

}
.cancel {
  width: 36rpx;
  height: 36rpx;
  position: absolute;
  top: 0;
  right: 0;
  margin-top: 20rpx;
}

.search_shadow {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 80rpx;
  left: 0;
  /* z-index: 999; */
  background-color: #fff;
  
}