
@import 'post-item/post-item-template.wxss';


swiper {
  width: 100%;
  height: 500rpx;
}

swiper image{
  width: 100%;
  height: 500rpx;

}
page {
  background-color: #EDECF8
}
.post-container {
  margin-top: 20px;
  margin-bottom: 40px;
  display: flex;
  flex-direction: column
}

.post-user {
  background-color: #fff
}
.post-user image {
  width: 80rpx;
  height:80rpx;
  vertical-align: middle;
  margin: 5px 7px 10px 5px 
}
.post-user text {
  font-size: 28rpx
}

.post-container .img {
  width: 100%;
  height:400rpx
}
.post-container .tx {
  margin: 20rpx 0 20rpx 20rpx;
  color: #666;
  line-height: 20px;
  letter-spacing: 2rpx;
  font-size: 28rpx
}
.post-other {
  margin-left: 20rpx;
  line-height: 16px;
  flex-direction: row
  
}
.post-other image {
  width: 30rpx;
  height: 30rpx;
  vertical-align: middle;
  margin-left: 5px;
  margin-right: 5px
}
.post-other text {
  font-size: 28rpx;
  margin-right: 15px;
  vertical-align: middle
}